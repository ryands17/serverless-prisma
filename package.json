{
  "name": "serverless-prisma2",
  "version": "1.0.0",
  "author": {
    "name": "Ryan Dsouza"
  },
  "private": true,
  "scripts": {
    "dev": "run-p generate:prisma watch:* offline",
    "deploy": "cross-env NODE_ENV=production sls deploy",
    "offline": "dotenv -- sls offline",
    "db:save": "yarn prisma migrate save --experimental",
    "db:migrate": "yarn prisma migrate up --experimental",
    "seed": "dotenv -- node prisma/seed.ts",
    "watch:nexus": "tsnd --transpile-only ./src/schema",
    "watch:ts": "tsc --watch",
    "generate:prisma": "yarn prisma generate",
    "prisma": "dotenv -- prisma"
  },
  "license": "MIT",
  "dependencies": {
    "@nexus/schema": "^0.16.0-next.2",
    "apollo-server-lambda": "^2.18.0",
    "nexus-plugin-prisma": "^0.19.0"
  },
  "devDependencies": {
    "@types/node": "14.11.2",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "cross-env": "^7.0.2",
    "dotenv-cli": "^4.0.0",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": ">=4.3.0",
    "lint-staged": ">=10.4.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "serverless": "^2.1.1",
    "serverless-dotenv-plugin": "^3.0.0",
    "serverless-offline": "^6.7.0",
    "ts-loader": "^8.0.4",
    "ts-node": "9.0.0",
    "ts-node-dev": "^1.0.0-pre.63",
    "typescript": "^4.0.3"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,json,md}": "prettier --write"
  }
}
